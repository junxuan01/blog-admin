{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      // Base 层别名 - 共享资源
      "@api/*": ["./src/base/api/*"],
      "@assets/*": ["./src/base/assets/*"],
      "@components/*": ["./src/base/components/*"],
      "@const/*": ["./src/base/const/*"],
      "@hooks/*": ["./src/base/hooks/*"],
      "@providers/*": ["./src/base/provider/*"],
      "@stores/*": ["./src/base/stores/*"],
      "@utils/*": ["./src/base/utils/*"],
      "@clients/*": ["./src/base/clients/*"],
      "@hoc/*": ["./src/base/hoc/*"],
      // App 层别名 - 页面模块
      "@app/*": ["./src/app/(dashboard)/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
